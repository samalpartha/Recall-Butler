# ========================================
# Recall Butler - Environment Variables
# ========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ==================
# Server Configuration
# ==================
SERVERPOD_ENV=development
SERVER_PORT=8080
SERVER_HOST=localhost

# ==================
# Database
# ==================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=recall_butler
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password_here

# Full connection URL (alternative to individual settings)
DATABASE_URL=postgresql://postgres:password@localhost:5432/recall_butler

# ==================
# Redis
# ==================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# ==================
# AI Services (OpenRouter)
# ==================
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your_api_key_here

# Optional: Override default models
OPENROUTER_CHAT_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_FAST_MODEL=anthropic/claude-3-haiku
OPENROUTER_EMBEDDING_MODEL=openai/text-embedding-3-small

# ==================
# Authentication
# ==================
# Generate a secure 256-bit secret: openssl rand -hex 32
JWT_SECRET=your_256_bit_jwt_secret_here
JWT_EXPIRY_HOURS=24
REFRESH_TOKEN_EXPIRY_DAYS=7

# ==================
# OAuth2 Providers (Optional)
# ==================
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Apple Sign-In
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# Facebook Login
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# X/Twitter OAuth
TWITTER_API_KEY=
TWITTER_API_SECRET=

# ==================
# External Integrations
# ==================
# n8n Workflow Automation
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_API_KEY=

# Web5 / Decentralized Identity
WEB5_AGENT_DID=
WEB5_DWN_ENDPOINT=

# ==================
# Storage
# ==================
# S3-compatible object storage
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=recall-butler-uploads
S3_REGION=us-east-1

# Local file storage path
UPLOAD_PATH=./uploads

# ==================
# Email (for notifications)
# ==================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@recallbutler.app

# ==================
# Push Notifications
# ==================
# Firebase Cloud Messaging
FCM_SERVER_KEY=
FCM_PROJECT_ID=

# Apple Push Notification Service
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_BUNDLE_ID=

# ==================
# Monitoring & Logging
# ==================
LOG_LEVEL=info
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# ==================
# Feature Flags
# ==================
ENABLE_WEB5=false
ENABLE_MCP=true
ENABLE_N8N=false
ENABLE_ANALYTICS=true

# ==================
# Rate Limiting
# ==================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ==================
# CORS
# ==================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Recall Butler Environment Configuration
# Copy this file to .env and fill in your values

# ============ Required ============

# OpenAI API Key for embeddings and AI features
OPENAI_API_KEY=sk-your-api-key-here

# ============ Database ============

# PostgreSQL connection (used by Docker Compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=recallbutler_dev
POSTGRES_DB=recall_butler
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ============ Server ============

# Serverpod server configuration
SERVER_HOST=localhost
SERVER_PORT=8080
SERVER_PUBLIC_URL=http://localhost:8080

# ============ Storage ============

# S3-compatible storage (optional, uses local storage in dev)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_BUCKET=recall-butler-uploads
S3_REGION=us-east-1

# ============ Redis (optional) ============

REDIS_HOST=localhost
REDIS_PORT=6379

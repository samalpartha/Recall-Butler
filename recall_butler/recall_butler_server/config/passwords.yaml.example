# ========================================
# Recall Butler - Serverpod Passwords
# ========================================
# Copy this file to passwords.yaml and fill in your values
# NEVER commit passwords.yaml to version control!
#
# This file is automatically loaded by Serverpod and accessible via:
# - session.passwords['keyName']
# - Serverpod.instance!.passwords['keyName']

# ===================
# Shared Passwords
# ===================
# These are used across all configurations
shared:
  # OpenRouter API Key - Get yours at https://openrouter.ai/keys
  openRouterApiKey: 'sk-or-v1-your_api_key_here'
  
  # JWT Secret - Generate with: openssl rand -hex 32
  jwtSecret: 'your_256_bit_jwt_secret_here'

# ===================
# Development
# ===================
development:
  # Database password (matches docker-compose.yaml)
  database: 'your_dev_database_password'
  
  # Redis password (leave empty for no auth)
  redis: ''
  
  # Service secret for internal communication
  serviceSecret: 'development_service_secret'
  
  # Auth module secrets
  emailSecretHashPepper: 'dev_email_pepper'
  jwtHmacSha512PrivateKey: 'dev_jwt_key'
  jwtRefreshTokenHashPepper: 'dev_refresh_pepper'

# ===================
# Test
# ===================
test:
  database: 'test_password'
  redis: ''
  
  emailSecretHashPepper: 'test_email_pepper'
  jwtHmacSha512PrivateKey: 'test_jwt_key'
  jwtRefreshTokenHashPepper: 'test_refresh_pepper'

# ===================
# Staging
# ===================
staging:
  database: 'staging_password'
  serviceSecret: 'staging_service_secret'
  
  emailSecretHashPepper: 'staging_email_pepper'
  jwtHmacSha512PrivateKey: 'staging_jwt_key'
  jwtRefreshTokenHashPepper: 'staging_refresh_pepper'

# ===================
# Production
# ===================
# IMPORTANT: Use strong, unique passwords in production!
# Generate with: openssl rand -base64 32
production:
  database: 'production_database_password'
  serviceSecret: 'production_service_secret'
  
  emailSecretHashPepper: 'production_email_pepper'
  jwtHmacSha512PrivateKey: 'production_jwt_key'
  jwtRefreshTokenHashPepper: 'production_refresh_pepper'
